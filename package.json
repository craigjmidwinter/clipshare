{
  "name": "clipshare-monorepo",
  "private": true,
  "scripts": {
    "minio": "docker compose up -d minio create-buckets",
    "minio:down": "docker compose down",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "env:sync": "ts-node ./scripts/sync-env.ts",
    "dev": "npm-run-all -p minio supabase:start env:sync web:dev",
    "web:dev": "npm --prefix web run dev",
    "test": "npm --prefix web test"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
