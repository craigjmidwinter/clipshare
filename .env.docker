# Clipshare Docker Environment Configuration
# Copy this file to .env and configure for your deployment

# Application Environment
NODE_ENV=production
PORT=3000
NEXT_TELEMETRY_DISABLED=1

# Next.js Authentication (REQUIRED)
# Generate a secure secret: openssl rand -base64 32
NEXTAUTH_SECRET=your-super-secret-key-at-least-32-characters-long
NEXTAUTH_URL=http://localhost:3000

# Database Configuration
# For SQLite (default) - now within single data directory:
DATABASE_URL=file:./data/db/dev.db
# For PostgreSQL (production):
# DATABASE_URL=postgresql://clipshare:password@postgres:5432/clipshare

# Plex Integration (REQUIRED)
# Get these from your Plex server settings
PLEX_CLIENT_ID=your-unique-client-id
PLEX_SERVER_URL=http://your-plex-server:32400
PLEX_SERVER_TOKEN=your-plex-server-token

# File Storage Paths (optional, uses defaults if not set)
# All within single data directory for easy management
CLIPS_DIR=/app/data/processed-files/clips
EXPORT_DIR=/app/data/processed-files/exports
TEMP_DIR=/app/data/temp

# Performance Configuration (optional)
PROCESS_CONCURRENCY=4
MAX_CONCURRENT_JOBS=2
MAX_CLIP_SIZE=500MB

# PostgreSQL Configuration (for production deployment)
POSTGRES_DB=clipshare
POSTGRES_USER=clipshare
POSTGRES_PASSWORD=secure-database-password

# Redis Configuration (optional, for session storage)
REDIS_URL=redis://redis:6379